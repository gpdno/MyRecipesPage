<%= render 'shared/page_title', title: "Chef: " + @chef.chefname %>

<div class='row'>
  <div class='col-md-4 col-md-offset-4 center'>
    <%= link_to gravatar_for(@chef, size: 200), chefs_path %>
  </div>
</div>
<hr/>

<div class='row'>
  <div class="col-md-4 col-md-offset-4 center">
    <h3><em>Recipes:</em></h3>
    <%= will_paginate @recipes%>
  </div>
</div>
<% @recipes.each do |recipe| %>
  <div class='row'>
    <div class='col-lg-6 well col-lg-offset-3'>
      <h4><%= link_to recipe.name, recipe_path(recipe) %></h4>
      <p><%= recipe.summary %></p>

        <span class='quite'><small> Created <%= time_ago_in_words(recipe.created_at) %> ago</small></span><br/>
        <span class='quite'><small> Updated <%= time_ago_in_words(recipe.updated_at) %> ago</small></span>
      </p>
    </div>
    </div>
  </div>
  <hr/>
<% end %>
