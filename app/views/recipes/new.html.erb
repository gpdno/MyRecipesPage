<p>
  <h4>Create a new recipe</h4>
  <hr/>
</p>
<div class='row'>
  <dic class='well col-md-8 col-md-offset-2'>
    <%= form_for @recipe do |f| %>
    <%= f.label :name%>
    <%= f.text_field :name%>
    
    <%= f.label :summary%>
    <%= f.text_field :summary%>
    
    <%= f.label :description%>
    <%= f.text_area :description, rows: 10%>
    
    <%= f.submit 'Create Recipe', class: 'btn btn-success'%>
    <% end %>
  </dic>
</div>